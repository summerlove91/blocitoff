<div class="container log-in-box">
  <h2>Log In</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", :class => 'input-field', style: 'margin-top: 20px' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", :class => 'input-field', style: 'margin-top: 10px' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field remember-me-checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", :class => 'input-submit-button'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
