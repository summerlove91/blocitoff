<div class="container sign-up-box">
  <h2 class="sign-up-box-title">New Account</h2>
  <h4 class="sign-up-box-text-2">
    Sign up with your work or personal email address
  </h4>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field sign-up-box-input-field">
      <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", :class => 'input-field' %>
    </div>

    <div class="field sign-up-box-input-field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Enter your password", :class => 'input-field', style: 'margin-top: 10px'%>
    </div>

    <div class="field sign-up-box-input-field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", :class => 'input-field' , style: 'margin-top:10px;'%>
    </div>

    <div class="actions sign-up-box-input-field">
      <%= f.submit "Sign up", :class => 'input-submit-button'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
