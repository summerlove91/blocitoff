<div class="container forgot-password-box">
  <h2 class="forgot-password-box-title">Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Enter your email", :class => 'input-field'  %>
    </div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", :class => 'input-submit-button'%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
