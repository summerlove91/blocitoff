<h3>All Todos</h3>
<% @items.each do |item| %>
  <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <%= link_to item.name, item %>
         <%= link_to "", item, method: :delete, class: 'glyphicon glyphicon-ok', data: {confirm: 'Are you sure you want to delete this item?'} %>
<!-- <%= link_to "Delete Item", @item, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this item?'} %> -->
       </h4>
     </div>
   </div>
<% end %>
