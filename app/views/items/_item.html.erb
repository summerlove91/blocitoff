<h3 class="all-todos">All Todos</h3>
<% @items.each do |item| %>
  <div class="media">
     <div class="media-body">
       <h4 class="media-heading">
         <%= link_to item.name, item, style: 'color: black; font-family: "Architects Daughter", cursive; font-size: 25px;', class: 'css_class'%>
         <%= link_to "", item, method: :delete, class: 'glyphicon glyphicon-ok', data: {confirm: 'Are you sure you want to delete this item?'} %>
<!-- <%= link_to "Delete Item", @item, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this item?'} %> -->
       </h4>
       <div class="time-left">
        <%= distance_of_time_in_words(Time.now, item.created_at.to_date + 7 ) %> left <br>
      </div>
     </div>
   </div>
<% end %>
